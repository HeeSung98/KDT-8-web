<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Signup</title>
  </head>
  <body>
    <h1>회원 가입</h1>
    <form name="signup">
      <input type="text" id="userId" placeholder="ID" /><br /><br />
      <input type="text" id="userName" placeholder="name" /><br /><br />
      <input type="password" id="userPw" placeholder="password" /><br /><br />
      <button type="button" onclick="signupFunc()">회원 가입</button><br />
    </form>
  </body>
  <script>
    async function signupFunc() {
      console.log('signupFunct()')
      const form = document.forms['signup']
      const loginResult = document.querySelector('#loginResult')

      try {
        const result = await axios({
          method: 'POST',
          url: '/signup',
          data: {
            userId: form.userId.value,
            userName: form.userName.value,
            userPw: form.userPw.value,
          },
        })
        if (result) {
          alert('회원가입에 성공하였습니다!')
          document.location.href = '/'
        } else {
          alert('회원가입에 실패하였습니다')
        }
      } catch (e) {
        console.log(e)
      }
    }
  </script>
</html>
